@model Product;

<form asp-action="CreateProduct" asp-controller="Home" method="POST">
    <label asp-for="Name"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Name"></span>
    <input type="text" asp-for="Name" class="form-control">

    <label asp-for="Description"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
    <input type="text" asp-for="Description" class="form-control">

    <label asp-for="Price"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Price"></span>
    <input type="number" step="0.01" asp-for="Price" class="form-control">

    <button style="margin-top: 20px;" class="btn btn-success">Create</button>
</form>