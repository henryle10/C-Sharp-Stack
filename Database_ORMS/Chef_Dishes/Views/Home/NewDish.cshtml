@model Dish;

<h1 class="text-center" style="margin-top: 55px;">
    Add a new Dish!
</h1>

<a style="text-align: left;" href="/">Home</a>

<div class="container">
    <div class="row" style="margin-top: 50px;">
        <form asp-action="addDish" asp-controller="Home" method="POST">
            <div class="col-sm-4"> 
                <label asp-for="Name"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="Name"></span>
                <input class="form-control" asp-for="Name"><br>

                <label asp-for="Calories"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="Calories"></span>
                <input class="form-control" asp-for="Calories">

                <label asp-for="Description"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
                <textarea asp-for="Description" class="form-control" name="Description" id="" cols="30" rows="10"></textarea>
                <div style="text-align: right; margin-top: 20px">
                    <button class="btn btn-success" type="submit">Add Dish</button>
                </div>
            </div>

            <div class="col-sm-4">  
                <label asp-for="ChefId">Chef</label>
                <span class="text-danger font-weight-bold" asp-validation-for="ChefId"></span>
                <select asp-for="ChefId" class="form-control" name="ChefId">
                    @foreach (var chef in ViewBag.Chefs)
                    {
                        <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        
                    }
                </select><br>
            </div>

            <div class="col-sm-4">  
                <label asp-for="Tastiness"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="Tastiness"></span>
                <select asp-for="Tastiness" class="form-control" name="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </form>
    </div>
</div>