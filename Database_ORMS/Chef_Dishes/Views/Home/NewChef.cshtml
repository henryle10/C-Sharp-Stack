@model Chef;

<h1 class="text-center" style="margin-top: 55px;">
    Add a Chef!
</h1>

<a href="/">Home</a>

<div class="container">
    <div class="row" style="margin-top: 50px;">
        <form asp-action="addChef" asp-controller="Home" method="POST">
            <div class="col-sm-6">  
                <label asp-for="FirstName"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
                <input class="form-control" asp-for="FirstName">
                <br>
                <label asp-for="LastName"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
                <input class="form-control" asp-for="LastName">
                <br>
            </div>

            <div class="col-sm-6">
                <label asp-for="DOB"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="DOB"></span>
                <input class="form-control" asp-for="DOB">
                <button class="btn btn-success btn pull-right" style="margin-top: 40px;" type="submit">Add Chef</button>
            </div>
        </form>
    </div>
</div>