@model List<Chef>;

<nav class="text-center">
    <div style="display: inline-block;">
        <h2>Chefs | <a asp-action="Dishes" asp-controller="Home">Dishes</a></h2>
    </div>
    <div class="text-right">
        <a asp-action="NewChef" asp-controller="Home">Add a Chef</a>
    </div>
</nav>
<h3>Check out our roster of Chefs!</h3>
<hr style="border: 1px solid black;">
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chef in Model)
            {
                var year = DateTime.Today.Year;
                var age = year - chef.DOB.Year;
            <tr>
                <td>@chef.FirstName @chef.LastName</td>
                <td>@age</td>
                <td>@chef.CreatedDishes.Count</td>
            </tr>
            }
        </tbody>
    </table>
</div>