@model LoginUser;

<form asp-action="LoginUser" asp-controller="Login">
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="LoginEmail"></span>
            <input asp-for="LoginEmail" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="LoginPassword"></span>
            <input asp-for="LoginPassword" class="form-control">
    </div>

    <button class="btn btn-success">Sign in</button>
</form>